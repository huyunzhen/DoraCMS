<div class="row" ng-controller="contentTags">
<div class="col-xs-12">
    <div class="panel">
        <a href="#addContentTags" role="button" class="btn btn-primary btn-sm" data-toggle="modal"><span class="fa fa-plus-square" aria-hidden="true">&nbsp;</span>增加新功课</a>
        <div class="pull-right">
            <!--搜索框-->
            <form action="" name="searchForm" >
                <div class="input-group">
                    <input type="text" name="searchKey"  id="searchInput" class="form-control input-sm pull-right" style="width:100px;" placeholder="请输入查询" value=""/>
                    <div class="input-group-btn" style="width: auto;">
                        <button class="btn btn-sm btn-default" type="submit"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="box">
        <div class="box-body table-responsive no-padding" >
            <table class="table table-hover">
             <thead> 
                <tr>
                    <th><input type="checkbox" id="selectAll"/></th>
                    <th>编号</th>
                    <th>功课名称</th>                    
                 
                </tr>
            </thead> 
            <tbody> 
                <%tagsData.forEach(function(item){%>
                <tr class="datalist">
                    <td><input type="checkbox" name="listItem" class="mini" value="<%=item._id%>"/></td>
                    <td class="sorting_1"><%=item.comments%></td>
                    <td class="sorting_1"><%=item.name%></td>  
                <%})%>
                </tr>
            </tbody> 
            </table>

        </div><!-- /.box-body -->
        <!--表格底部-->
        <div class="box-footer">
            <!--分页-->
            <!--表格底部-->
            <div class="box-footer">
                <!--分页-->
                <!--分页模块-->
                
            </div>
            <div class="overlay hide" id="dataLoading">
                <i class="fa fa-refresh fa-spin"></i>
            </div>
        </div>
        <div class="overlay hide" id="dataLoading">
            <i class="fa fa-refresh fa-spin"></i>
        </div>
    </div><!-- /.box -->

</div><!-- /.col -->

<!--添加用户组模态窗口-->
<div class="modal fade" id="addContentTags">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">添加功课</h4>
            </div>
            <div class="modal-body">
                <form role="form" class="form-horizontal" name="myForm" ng-submit="processForm(myForm.$valid)" novalidate>
                    <div class="form-group">
                        <label class="control-label col-sm-4">已经选择的课程名称：</label>
                        <div class="col-sm-6" id="chooseCourse">
                        </div>
                    </div>
               
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" ng-disabled="myForm.$invalid">提交</button>
                    </div>
                </form>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

 </div><!-- /.row -->

</div>

<script>
    $(function(){ 
       $("#searchInput").keyup(function(){ 
          $("table tbody tr") 
                    .hide() 
                    .filter(":contains('"+( $(this).val() )+"')") 
                    .show(); 
       }).keyup(); 
       
    });
     
</script>